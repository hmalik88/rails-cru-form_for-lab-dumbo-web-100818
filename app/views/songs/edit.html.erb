<h1>Update Song</h1>

<%= form_for @song do |f| %>
  <label>Update Name:</label><br><br>
  <%= f.text_field :name %><br><br>
  <label>Update Artist:</label><br><br>
  <% @artists.each_with_index do |artist, i| %>
  <p><%= i+1 %>. <%= artist.name %></p>
  <% end %>
  <%= f.text_field :artist_id %><br><br>
  <label>Update Genre:</label><br><br>
  <% @genres.each_with_index do |genre, i| %>
  <p><%= i+1 %>. <%= genre.name %></p>
  <% end %>
  <%= f.text_field :genre_id %>
  <%= f.submit %>
<% end %>
